<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/themeColor"
    android:orientation="vertical" >

    <ImageView
        android:id="@+id/caretopBar_more"
        style="@style/topbarsize"
        android:src="@drawable/lyy_more" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:layout_centerVertical="true"
        android:paddingLeft="8.0dp" >

        <TextView
            android:id="@+id/my_text"
            style="@style/ww"
            android:autoLink="all"
            android:background="@drawable/baike_btn_pink_left_f_96"
            android:gravity="center"
            android:text="找人代养"
            android:textColor="#66aa11"
            android:textSize="14sp" />

        <TextView
            android:id="@+id/you_text"
            style="@style/ww"
            android:autoLink="all"
            android:background="@drawable/baike_btn_trans_right_f_96"
            android:gravity="center"
            android:text="我想代养"
            android:textColor="#ffffff"
            android:textSize="14sp"/>
    </LinearLayout>

</RelativeLayout>