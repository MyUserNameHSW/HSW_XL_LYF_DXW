<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LoginActivity" >

    <RelativeLayout
        android:id="@+id/r1"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/login_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/topBar1_text"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="登录"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        style="@style/mw"
        android:layout_below="@id/r1"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp"
        android:orientation="vertical" >

        <EditText
            android:id="@+id/login_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_top_backgroung"
            android:drawableLeft="@drawable/lyy_username"
            android:hint="请输入手机号或用户名"
            android:maxLength="16"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/login_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="-1dp"
            android:background="@drawable/edit_bottom_backgroung"
            android:drawableLeft="@drawable/lyy_password"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="15sp" />

        <Button
            android:id="@+id/login_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login_bg"
            android:text="登录"
            android:textColor="@color/white" />

        <RelativeLayout
            style="@style/mw"
            android:layout_marginTop="15dp" >

            <TextView 
                android:id="@+id/login_link1"
                style="@style/ww"
                android:text="立即注册"
                android:autoLink="all"
                />
            <TextView 
                android:id="@+id/forget_code"
                style="@style/ww"
                android:layout_alignParentRight="true"
                android:text="忘记密码"
                android:autoLink="all"
                />
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>