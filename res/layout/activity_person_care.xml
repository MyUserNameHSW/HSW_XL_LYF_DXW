<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PersonCareActivity" >

    <RelativeLayout
        android:id="@+id/r1"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/pcareyy_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/pca_text"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="个人代养"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/mw"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/pc_headimg"
                android:layout_width="80dp"
                android:layout_height="80dp" />

            <TextView
                android:id="@+id/pc_username"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:text="username"
                android:textSize="20sp" />
        </LinearLayout>

        <TextView
            android:id="@+id/pc_address"
            style="@style/ww"
            android:layout_marginTop="5dp"
            android:text="pc_address"
            android:textSize="18sp" />


            <TextView
                android:id="@+id/pc_type"
                style="@style/ww"
                android:layout_marginTop="5dp"
                android:text="pc_type"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pc_overtime"
                style="@style/ww"
                android:layout_marginTop="5dp"
                android:text="pc_overtime"
                android:textSize="18sp" />

        <LinearLayout
            style="@style/mw"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/pc_carenum"
                style="@style/ww"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="pc_carenum"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/pc_focusnum"
                style="@style/ww"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                android:text="pc_focusnum"
                android:textSize="18sp" />
        </LinearLayout>

        <LinearLayout
            style="@style/mw"
            android:layout_marginTop="5dp"
            android:orientation="horizontal" >

            <TextView
                style="@style/ww"
                android:text="联系花店"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/pc_call_phone"
                style="@style/ww"
                android:layout_marginLeft="20dp"
                android:src="@drawable/call_phone" />

            <ImageView
                style="@style/ww"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:src="@drawable/u37_line" />

            <ImageView
                android:id="@+id/pc_call_message"
                style="@style/ww"
                android:src="@drawable/call_message" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:layout_marginTop="10dp"
            android:background="@color/gray" />

        <TextView
            android:id="@+id/pc_exprience"
            style="@style/ww"
            android:layout_marginTop="10dp"
            android:text="pc_exprience"
            android:textSize="19sp" />
    </LinearLayout>

</RelativeLayout>