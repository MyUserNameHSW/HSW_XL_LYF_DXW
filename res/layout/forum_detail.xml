<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    style="@style/mm" >

    <LinearLayout
        android:id="@+id/relative"
        style="@style/top" >

        <ImageView
            android:id="@+id/back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/topBar2_text"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:gravity="center"
            android:text="帖子内容"
            android:textColor="#ffffff"
            android:textSize="20sp" />

        <Button
            android:id="@+id/send"
            android:layout_width="0dp"
            android:layout_height="40dp"
            android:layout_weight="1"
            android:background="#00000000"
            android:textColor="#ffffff"
            android:textSize="16sp" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/input"
        style="@style/mw"
        android:layout_alignParentBottom="true"
        android:layout_marginTop="3dp"
        android:orientation="horizontal" >

        <ImageView
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="1.5"
            android:src="@drawable/tm_ic_expression_up" />

        <EditText
            android:id="@+id/inputtext"
            android:layout_width="0dp"
            android:layout_height="38dp"
            android:layout_weight="7"
            android:background="@drawable/shape"/>

        <ImageView
            android:id="@+id/send2"
            android:layout_width="0dp"
            android:layout_height="42dp"
            android:layout_weight="2"
            android:layout_marginBottom="3dp"
            android:scaleType="fitXY"
            android:src="@drawable/wl_chat_btn_sendmsg" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/ss"
        style="@style/mw"
        android:layout_above="@+id/input"
        android:layout_below="@+id/relative" >

        <LinearLayout
            style="@style/mw"
            android:layout_height="match_parent"
            android:layout_above="@+id/linearLayout4"
            android:layout_below="@+id/relative"
            android:orientation="vertical" >

            <LinearLayout
                android:id="@+id/linearitem"
                style="@style/mw"
                android:layout_marginLeft="5dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="10dp"
                android:orientation="vertical" >

                <LinearLayout
                    android:id="@+id/linearitem5"
                    style="@style/mw"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/userimagedetail"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:scaleType="centerInside"/>

                    <LinearLayout
                        android:layout_width="200dp"
                        android:layout_height="40dp"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:orientation="vertical" >

                        <TextView
                            android:id="@+id/usernamedetail"
                            style="@style/ww"
                            android:textSize="15sp"/>

                        <TextView
                            android:id="@+id/timedetail"
                            style="@style/ww" 
                            android:layout_marginTop="3dp"
                            android:textSize="12sp"/>
                    </LinearLayout>

                    <ImageView
                        android:id="@+id/focus"
                        android:layout_width="60dp"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearitem4"
                    style="@style/mw"
                    android:layout_marginLeft="5dp"
                    android:layout_marginRight="5dp"
                    android:orientation="vertical" >

                    <TextView
                        android:id="@+id/point2"
                        style="@style/mw"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="false"
                        android:textSize="16sp" />
                    
                    <TextView
                        android:id="@+id/themedetail"
                        style="@style/mw"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="false"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/articldetail"
                        style="@style/mw"
                        android:layout_marginLeft="7dp"
                        android:layout_marginRight="7dp"
                        android:layout_marginTop="5dp"
                        android:singleLine="false"
                        android:textSize="16sp" />

                    <GridView
                        android:id="@+id/detailgridView"
                        style="@style/mw"
                        android:layout_marginLeft="5dp"
                        android:layout_marginRight="5dp"
                        android:layout_below="@+id/newtheme"
                        android:layout_marginTop="5dp"
                        android:gravity="center"
                        android:stretchMode="columnWidth" >
                    </GridView>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="35dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginTop="5dp"
                android:orientation="horizontal" >

                <LinearLayout
                    android:id="@+id/linearLayout1"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/fenxiang" />
                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="3"
                    android:gravity="center"
                    android:orientation="horizontal" >
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout2"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1.00"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/tm_post_comment" />
                </LinearLayout>

                <LinearLayout
                    android:id="@+id/linearLayout3"
                    android:layout_width="0dp"
                    android:layout_height="35dp"
                    android:layout_weight="1.00"
                    android:gravity="center"
                    android:orientation="horizontal" >

                    <ImageView
                        android:id="@+id/favour2"
                        android:layout_width="25dp"
                        android:layout_height="25dp"
                        android:layout_gravity="center_vertical"
                        android:src="@drawable/af_ugc_icon_favour" />
                </LinearLayout>
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="5dp"
                android:background="#44909090" />

            <ListView
                android:id="@+id/mydetaillistView"
                style="@style/mw"
                android:layout_marginLeft="5sp"
                android:layout_marginRight="5sp"
                android:layout_marginTop="5dp" >
            </ListView>
        </LinearLayout>
    </ScrollView>

</RelativeLayout>