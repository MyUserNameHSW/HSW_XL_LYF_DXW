<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.lyy.detailpage.MessageAddressActivity" >

     <RelativeLayout
        android:id="@+id/r1"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/image_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/ar1_text"
            style="@style/ww"
            android:text="新增收货地址"
            android:layout_centerInParent="true"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_below="@id/r1"
        android:id="@+id/l1"
        android:layout_width="match_parent"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_height="200dp"
        android:orientation="vertical" >


        <EditText
            android:id="@+id/address_person"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:background="@drawable/edit_top_backgroung"
            android:inputType="textPostalAddress"
            android:hint="请输入收货地址" />

        

        <EditText
            android:id="@+id/name_person"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/edit_middle_backgroung"
            android:layout_marginTop="-1dp"
            android:inputType="textPersonName" 
            android:hint="请输入收货人姓名"/>

        
        <EditText
            android:id="@+id/phone_person"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:ems="10"
            android:background="@drawable/edit_bottom_backgroung"
            android:layout_marginTop="-1dp"
            android:inputType="phone"
            android:hint="请输入收货人电话" />

    </LinearLayout>

    <Button
        android:id="@+id/address_ok"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:background="#EE7600"
        android:text="确定"
        android:textSize="18sp" />


</RelativeLayout>
