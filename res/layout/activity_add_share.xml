<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddShareActivity" >

    <RelativeLayout
        android:id="@+id/r1"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/as_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/ar1_text"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="代养分享"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/add_contents"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/two_radius"
        android:enabled="true"
        android:gravity="top"
        android:hint="分享植物状况"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="3"
        android:scrollbars="vertical" >
    </EditText>

    <LinearLayout
        android:id="@+id/uu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/add_contents"
        android:layout_marginLeft="16dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/share_img1"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/orca_composer_popup_normal" />

        <ImageView
            android:id="@+id/share_img2"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/orca_composer_popup_normal" />

        <ImageView
            android:id="@+id/share_img3"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:src="@drawable/orca_composer_popup_normal" />
    </LinearLayout>

    <Button
        android:id="@+id/add_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/uu"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login_bg"
        android:gravity="center"
        android:text="提交分享"
        android:textColor="@color/white" />

</RelativeLayout>