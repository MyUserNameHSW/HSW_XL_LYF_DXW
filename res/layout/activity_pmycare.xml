<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".PMycareActivity" >

    <RelativeLayout
        android:id="@+id/pmycare_top"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/pmycare_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/ptopBar2_text"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="我的代养"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <ListView
        android:layout_below="@id/pmycare_top"
        android:id="@+id/pmy_listview"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

</RelativeLayout>