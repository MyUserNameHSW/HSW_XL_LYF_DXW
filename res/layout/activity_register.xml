<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".RegisterActivity" >

    <RelativeLayout
        android:id="@+id/r2"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/register_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/topBar2_text"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="注册"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <RelativeLayout
        style="@style/mw"
        android:layout_below="@id/r2"
        android:layout_centerHorizontal="true"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="50dp" >

        <EditText
            android:id="@+id/register_user"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edit_top_backgroung"
            android:drawableLeft="@drawable/lyy_username"
            android:hint="请输入用户名"
            android:maxLength="16"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/register_code"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_user"
            android:layout_marginTop="-1dp"
            android:background="@drawable/edit_middle_backgroung"
            android:drawableLeft="@drawable/lyy_password"
            android:hint="请输入密码"
            android:inputType="textPassword"
            android:maxLength="16"
            android:textSize="15sp" />

        <EditText
            android:id="@+id/register_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_code"
            android:layout_marginTop="-1dp"
            android:background="@drawable/edit_middle_backgroung"
            android:drawableLeft="@drawable/lyy_user_phone"
            android:hint="请输入手机号"
            android:inputType="phone"
            android:maxLength="11"
            android:textSize="15sp" />

        <Button
            android:id="@+id/yanzheng"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_alignParentRight="true"
            android:layout_below="@id/register_code"
            android:layout_marginRight="5dp"
            android:layout_marginTop="5dp"
            android:background="@drawable/yanzheng_bg"
            android:text="获取验证码" />

        <EditText
            android:id="@+id/register_yanzheng"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_phone"
            android:layout_marginTop="-1dp"
            android:background="@drawable/edit_bottom_backgroung"
            android:drawableLeft="@drawable/lyy_msg_get"
            android:hint="请输入验证码"
            android:inputType="number"
            android:maxLength="5"
            android:textSize="15sp" />

        <Button
            android:id="@+id/regisiter_btn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/register_yanzheng"
            android:layout_marginTop="30dp"
            android:background="@drawable/btn_login_bg"
            android:text="注册"
            android:textColor="@color/white" />

        <TextView
            android:id="@+id/register_link1"
            style="@style/ww"
            android:layout_below="@id/regisiter_btn"
            android:layout_marginTop="15dp"
            android:layout_alignParentRight="true"
            android:autoLink="all"
            android:text="登录" />
    </RelativeLayout>

</RelativeLayout>