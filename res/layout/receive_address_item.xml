<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/receive_name"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="名字"
            android:textColor="#000000"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/receive_phone"
            android:layout_width="0dp"
            android:layout_height="30dp"
            android:layout_marginLeft="1dp"
            android:layout_marginTop="10dp"
            android:layout_weight="1"
            android:text="18738775965"
            android:textColor="#000000"
            android:textSize="18sp" />
    </LinearLayout>

    <TextView
        android:id="@+id/receive_address"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="阿斯顿撒梵蒂冈地方GV发就好了的回复"
        android:textColor="#000000"
        android:textSize="16sp" />
    <Button 
        android:id="@+id/receive_address_ok"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="确认"
        android:background="@drawable/yanzheng_bg1"
        android:textSize="17sp"/>

</LinearLayout>