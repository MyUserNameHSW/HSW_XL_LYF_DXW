<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CareAssessActivity" >

    <RelativeLayout
        android:id="@+id/r1"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/care_assess_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="评价代养"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <EditText
        android:id="@+id/care_assess_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/r1"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/two_radius"
        android:enabled="true"
        android:gravity="top"
        android:inputType="textMultiLine"
        android:maxLines="5"
        android:minLines="3"
        android:scrollbars="vertical" >
    </EditText>

    <Button
        android:layout_below="@id/care_assess_text"
        android:id="@+id/cass_submit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/btn_login_bg"
        android:gravity="center"
        android:text="提交评价"
        android:textColor="@color/white" />

</RelativeLayout>