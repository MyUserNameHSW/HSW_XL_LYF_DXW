<?xml version="1.0" encoding="utf-8"?>
<com.example.circleimageview.ReboundScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    style="@style/mm" >

    <LinearLayout
        android:id="@+id/care_change"
        style="@style/mm"
        android:orientation="vertical" >

        <LinearLayout
            style="@style/mw"
            android:background="#ffffff"
            android:orientation="horizontal"
            android:paddingBottom="20dp"
            android:paddingTop="20dp" >

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/shopcare"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/shop_care" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="店铺代养"
                    android:textColor="@color/black" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical" >

                <ImageView
                    android:id="@+id/personcare"
                    android:layout_width="100dp"
                    android:layout_height="70dp"
                    android:layout_gravity="center"
                    android:padding="5dp"
                    android:src="@drawable/person_care" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:text="个人代养"
                    android:textColor="@color/black" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="10dp" />

        <RelativeLayout
            style="@style/mw"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="@color/white" >

            <!-- 花店推荐 -->

            <View
                android:id="@+id/view1"
                android:layout_width="8dp"
                android:layout_height="25dp"
                android:background="#33cc99" />

            <TextView
                style="@style/ww"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/view1"
                android:text="精品花店"
                android:textColor="#33cc99"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin1"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_care_img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shop_care_name1"
                    style="@style/ww"
                    android:text="shop_name" 
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/shop_care_script1"
                    style="@style/ww"
                    android:layout_marginTop="20dp"
                    android:maxLines="2"
                    android:text="script"
                    android:textColor="#919191" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin2"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_care_img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shop_care_name2"
                    style="@style/ww"
                    android:textSize="18sp"
                    android:text="shop_name" />

                <TextView
                    android:id="@+id/shop_care_script2"
                    style="@style/ww"
                    android:textColor="#919191"
                    android:maxLines="2"
                    android:layout_marginTop="15dp"
                    android:text="script" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin3"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/shop_care_img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/shop_care_name3"
                    style="@style/ww"
                    android:textSize="18sp"
                    android:text="shop_name" />

                <TextView
                    android:id="@+id/shop_care_script3"
                    style="@style/ww"
                    android:textColor="#919191"
                    android:maxLines="2"
                    android:layout_marginTop="15dp"
                    android:text="script" />
            </LinearLayout>
        </LinearLayout>
        <!-- 个人推荐 -->

        <RelativeLayout
            style="@style/mw"
            android:background="@color/white"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp" >

            <View
                android:id="@+id/view2"
                android:layout_width="8dp"
                android:layout_height="25dp"
                android:background="#33cc99" />

            <TextView
                style="@style/ww"
                android:layout_marginLeft="3dp"
                android:layout_toRightOf="@id/view2"
                android:text="种植能人"
                android:textColor="#33cc99"
                android:textSize="20sp" />
        </RelativeLayout>

        <LinearLayout
            android:id="@+id/lin4"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/person_care_img1"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/person_care_name1"
                    style="@style/ww"
                    android:text="person_name" 
                    android:textSize="18sp"/>

                <TextView
                    android:id="@+id/person_care_script1"
                    style="@style/ww"
                    android:layout_marginTop="15dp"
                    android:textColor="#919191"
                    android:text="script" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin5"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/person_care_img2"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/person_care_name2"
                    style="@style/ww"
                    android:textSize="18sp"
                    android:text="person_name" />

                <TextView
                    android:id="@+id/person_care_script2"
                    style="@style/ww"
                    android:textColor="#919191"
                    android:layout_marginTop="15dp"
                    android:text="script" />
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:id="@+id/lin6"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:paddingRight="16dp"
            android:paddingLeft="16dp"
            android:layout_marginTop="15dp"
            android:background="#ffffff"
            android:orientation="horizontal" >

            <ImageView
                android:id="@+id/person_care_img3"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:padding="5dp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/person_care_name3"
                    style="@style/ww"
                    android:textSize="18sp"
                    android:text="person_name" />

                <TextView
                    android:id="@+id/person_care_script3"
                    style="@style/ww"
                    android:textColor="#919191"
                    android:layout_marginTop="15dp"
                    android:text="script" />
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>

</com.example.circleimageview.ReboundScrollView>