<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MyCareActivity" >

    <RelativeLayout
        android:id="@+id/mycare_top"
        style="@style/mw"
        android:background="@color/themeColor" >

        <ImageView
            android:id="@+id/mycare_back"
            style="@style/topbarsize"
            android:src="@drawable/lyy_top_back" />

        <TextView
            android:id="@+id/topBar2_text"
            style="@style/ww"
            android:layout_centerInParent="true"
            android:text="我的代养"
            android:textColor="#ffffff"
            android:textSize="20sp" />
    </RelativeLayout>

    <GridView
        android:id="@+id/mycare_gv"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/mycare_top"
        android:layout_marginLeft="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center"
        android:horizontalSpacing="10dp"
        android:numColumns="2"
        android:stretchMode="columnWidth"
        android:verticalSpacing="10dp" >
    </GridView>

</RelativeLayout>