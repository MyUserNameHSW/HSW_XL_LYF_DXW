<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="#33cc99"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/store_back"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:src="@drawable/lyy_back_left" />

        <TextView
            android:id="@+id/store_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="6"
            android:text="店铺简介"
            android:textColor="#ffffff"
            android:textSize="24sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="3dp"
        android:layout_alignParentLeft="true"
        android:background="#EDEDED" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:orientation="horizontal" >

        <ImageView
            android:id="@+id/store_picture"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:src="@drawable/lyy_goods_picture" />

        <TextView
            android:id="@+id/store_name1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="10dp"
            android:layout_weight="3"
            android:textSize="20sp" />
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:layout_alignParentLeft="true"
        android:background="#EDEDED" />
<LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginTop="20dp"
        android:text="所在地"
        android:textSize="16sp" />
     <TextView
        android:id="@+id/store_address"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:layout_marginTop="20dp"
        android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="开店时间"
        android:textSize="16sp" />
      <TextView
        android:id="@+id/store_whentime"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="店铺等级"
        android:textSize="16sp" />
        <TextView
        android:id="@+id/store_level"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />
    </LinearLayout>
    <LinearLayout 
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <TextView
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="1"
        android:layout_marginTop="10dp"
        android:text="服务电话"
        android:textSize="16sp" />
        <TextView
        android:id="@+id/store_phone"
        android:layout_width="0dp"
        android:layout_height="40dp"
        android:layout_weight="2"
        android:layout_marginTop="10dp"
        android:textSize="16sp" />
</LinearLayout>
</LinearLayout>
